<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/text_stat_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:maxLines="2"
            android:textColor="#373737"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/layout_stats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/text_stat_content"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal" >
                <ImageView
            android:id="@+id/stat_earth"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/small_earth"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/stat_fire"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/small_fire"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/stat_air"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/small_air"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/stat_water"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/small_water"
            android:visibility="invisible" />
        </LinearLayout>

    
    </RelativeLayout>

</RelativeLayout>